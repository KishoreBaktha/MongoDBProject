<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#08f4e0"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/empnameview"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Employee Name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/empname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignStart="@+id/dept"
        android:layout_below="@+id/empnameview"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:id="@+id/empcodeview"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_below="@+id/empnameview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Employee Code"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/empcode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/empcodeview"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_below="@+id/empcodeview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Department"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dept"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignStart="@+id/loc"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/dept"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:text="Make" />

    <EditText
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_below="@+id/loc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Category"
        android:textSize="20dp" />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:text="Type" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView8"
        android:layout_marginEnd="17dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/empnameview"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="16dp"
        android:text="Problem Description"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/probdesc"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/probdesc"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/probdesc"
        android:background="#f42105"
        android:text="Submit"
        android:textColor="#fcfcfc"/>

</RelativeLayout>
</ScrollView>