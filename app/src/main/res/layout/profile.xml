<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#03f7f7">

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Employee Name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/empname2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignStart="@+id/empcode2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/empname2"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:text="Employee Code" />

    <EditText
        android:id="@+id/empcode2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/empcode2"
        android:layout_marginTop="17dp"
        android:background="#260af7"
        android:text="Designation"
        android:textColor="#fcfcfc"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/desig"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignEnd="@+id/empcode2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/desig"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="Phone Extension" />

    <EditText
        android:id="@+id/phoneext"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/phoneext"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignStart="@+id/phoneext"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/price"
        android:background="#f42105"
        android:text="CANCEL"
        android:textColor="#fcfcfc" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cancel"
        android:background="#f42105"
        android:text="UPDATE"
        android:textColor="#fcfcfc" />
</LinearLayout>