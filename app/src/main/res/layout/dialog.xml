<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03f7f7">

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Department"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dept"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignStart="@+id/loc"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/dept"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:text="Location" />

    <EditText
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/loc"
        android:layout_marginTop="17dp"
        android:background="#260af7"
        android:text="System_serial_num"
        android:textColor="#fcfcfc"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/serialnum"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignEnd="@+id/loc"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/serialnum"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="Purchase Date" />

    <EditText
        android:id="@+id/purchasedate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="#260af7"
        android:textColor="#fcfcfc"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/purchasedate"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="16dp"
        android:text="Price"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#fcf8f8"
        android:layout_alignStart="@+id/serialnum"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
</RelativeLayout>